{
    "manifest_version": "2",
    "api_version": "1",
    "name": "Process Killer",
    "description": "This can kill user processes",
    "developer_name": "Aleksandr Gornostal",
    "icon": "images/icon.png",
    "options": {
        "query_debounce": 0.2
    },
    "preferences": [
        {
            "id": "pkiller_kw",
            "type": "keyword",
            "name": "Process Killer",
            "default_value": "kill"
        },
        {
            "id": "verification_timeout",
            "type": "input",
            "name": "Verification timeout",
            "description": "Seconds to wait before asking to force-exit process (set to 0 to disable)",
            "default_value": "3"
        }
    ]
}
